<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Excellence_Slider::css/image.css" />
        <css src="Excellence_Slider::css/bxslider/jquery.bxslider.css" />
        <css src="Excellence_Slider::css/flexslider/flexslider.css" />
        <css src="Excellence_Slider::css/owlcarousel/owl.carousel.min.css" />
        <css src="Excellence_Slider::css/owlcarousel/owl.theme.default.min.css" />
        <css src="Excellence_Slider::css/unslider/unslider.css" />
        <css src="Excellence_Slider::css/unslider/unslider-dots.css" />
    </head>
    <body>
        <referenceContainer name="main.content">
            
            <block template="slider.phtml" class="Excellence\Slider\Block\Slider" name="excellence_slider.cms.top" before="-">
                <action method="setSlider">
                    <argument name="position" xsi:type="string">3</argument>
                </action>
            </block>
            <block template="slider.phtml" class="Excellence\Slider\Block\Slider" name="excellence_slider.cms.bottom" after="-">
                <action method="setSlider">
                    <argument name="position" xsi:type="string">4</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="sidebar.additional">
            <block template="slider.phtml" class="Excellence\Slider\Block\Slider" name="excellence_slider.category.left.top" before="-">
                <action method="setSlider">
                    <argument name="position" xsi:type="string">1</argument>
                </action>
            </block>
            <block template="slider.phtml" class="Excellence\Slider\Block\Slider" name="excellence_slider.category.left.bottom" after="-">
                <action method="setSlider">
                    <argument name="position" xsi:type="string">2</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="sidebar.additional">
            <block template="slider.phtml" class="Excellence\Slider\Block\Slider" name="excellence_slider.category.right.top" before="-">
                <action method="setSlider">
                    <argument name="position" xsi:type="string">5</argument>
                </action>
            </block>
            <block template="slider.phtml" class="Excellence\Slider\Block\Slider" name="excellence_slider.category.right.bottom" after="-">
                <action method="setSlider">
                    <argument name="position" xsi:type="string">6</argument>
                </action>
            </block>
        </referenceContainer>
        
    </body>
</page>