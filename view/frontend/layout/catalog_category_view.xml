<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Excellence_Slider::css/image.css" />
        <css src="Excellence_Slider::css/bxslider/jquery.bxslider.css" />
        <css src="Excellence_Slider::css/flexslider/flexslider.css" />
        <css src="Excellence_Slider::css/owlcarousel/owl.carousel.min.css" />
        <css src="Excellence_Slider::css/owlcarousel/owl.theme.default.min.css" />
        <css src="Excellence_Slider::css/unslider/unslider.css" />
        <css src="Excellence_Slider::css/unslider/unslider-dots.css" />
    </head>  
    <body>     
        <referenceContainer name="content">
            <referenceBlock name="excellence_slider.cms.top" remove="true" />
            <referenceBlock name="excellence_slider.cms.bottom" remove="true" />
            <block template="slider.phtml" class="Excellence\Slider\Block\Slider" name="excellence_slider.center.top"  before="-">
                <action method="setSlider">
                    <argument name="position" xsi:type="string">3</argument>
                </action>
            </block>
            <block template="slider.phtml" class="Excellence\Slider\Block\Slider" name="excellence_slider.center.bottom" after="-" >
                <action method="setSlider">
                    <argument name="position" xsi:type="string">4</argument>
                </action>
            </block>
        </referenceContainer>

        <referenceContainer name="right">
            <block template="slider.phtml" class="Excellence\Slider\Block\Slider" name="excellence_slider.category.right_side.top" before="-" >
                <action method="setSlider">
                    <argument name="position" xsi:type="string">5</argument>
                </action>
            </block>
            <block template="slider.phtml" class="Excellence\Slider\Block\Slider" name="excellence_slider.category.right_side.bottom" after="-" >
                <action method="setSlider">
                    <argument name="position" xsi:type="string">6</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="left">
            <block template="slider.phtml" class="Excellence\Slider\Block\Slider" name="excellence_slider.category.left_side.top" before="-" >
                <action method="setSlider">
                    <argument name="position" xsi:type="string">1</argument>
                </action>
            </block>
            <block template="slider.phtml" class="Excellence\Slider\Block\Slider" name="excellence_slider.category.left_side.bottom" after="-" >
                <action method="setSlider">
                    <argument name="position" xsi:type="string">2</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>